<% if @learning_group.errors.messages.empty? %>
  $("span").removeClass('highlight');
  $("#<%= @learning_group.slug %>").hide();
  $("#<%= @learning_group.slug %>").html("<span class='highlight'>Matriculado</span> " +
                                    "<%= j link_to "Ir para turma: #{@learning_group.name}", @learning_group %>");
  $("#<%= @learning_group.slug %>").fadeIn('slow');
<% else %>
  error = $("#<%= @learning_group.slug %> span");
  error.addClass("alert alert-error");
  error.html("<%= @learning_group.errors.messages[:enroll] %>");
<% end %>
