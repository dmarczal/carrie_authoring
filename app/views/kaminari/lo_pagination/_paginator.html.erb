<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>

<% _select = (select_tag :page, options_for_select(@pagination, params[:page]),
              :onchange => "window.location.href ='/published/fractals/#{@lo.slug}/page/' + this.value ") %>
<%= paginator.render do -%>
  <nav class="lo_pagination">
    <ul>
      <%= prev_page_tag  %>
      <%= first_page_tag  %>

      <li class='active'> <%= _select %> </li>

      <%= last_page_tag  %>
      <%= next_page_tag %>
    </ul>
    <span class="clear info"> Mostrando a p√°gina <%= current_page %> de <%= num_pages %> </span>
  </nav>
<% end -%>
