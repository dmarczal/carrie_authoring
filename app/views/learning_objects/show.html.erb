<section>
  <header>
    <h1>Objeto de Aprendizagem <em><%= @learning_object.name %></em> </h1>
  </header>
  <article>
    <%= markdown @learning_object.description %>
  </article>


  <article>
    <header>
      <h1 class='left'> Exercícios </h1>
      <p class='right'>
        <%= link_to 'Criar novo Exercício', new_learning_object_exercise_path(@learning_object), :class => "btn large" %>
      </p>
    </header>

    <table class="zebra-striped bordered-table">
      <thead>
        <tr>
          <th>Ordene</th>
          <th>Título</th>
          <th>Enunciado</th>
          <th>Fractal</th>
        </tr>
      </thead>
      <tbody id="exercises" data-update-url="<%= sort_exercises_learning_objects_url %>">
        <% @exercises.each do |exercise| %>
          <tr id='<%= exercise.id %>' >
            <td class="handle">[DRAG]</td>
            <td><%= link_to exercise.title, [@learning_object, exercise] %></td>
            <td><%= markdown exercise.enunciation %></td>
            <td><%= exercise.fractal.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </article>

</section>
