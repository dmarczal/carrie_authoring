<h2>Registrar-se</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <%= f.input :user_type, :as => :select, :collection => ["Aluno", "Professor"], :label => "Eu sou", :include_blank => false %>
  <%= f.input :email, :required => true, :autofocus => true %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true, :label => "Confirme sua senha" %>
  <%= f.button :submit, "Registrar-se", :class => "btn large" %>

<% end %>

