var fracs = $('<%= j render(@fractals) %>');

fracs.find("td.fractal").each(function (){
  load_fractals_index(this);
});

$('#fractals').append(fracs);
<% unless @fractals.last_page? %>
  $('.pagination').replaceWith('<%= j paginate(@fractals) %>');
<% else %>
  $('.pagination').remove();
<% end %>
